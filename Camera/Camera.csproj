<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFrameworks>net9.0-windows;net8.0-windows;net481</TargetFrameworks>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <AnalysisLevel>latest-all</AnalysisLevel>
    <RootNamespace>CameraApp</RootNamespace>
    <PlatformTarget>x86</PlatformTarget>
    <ApplicationIcon>Resources\bigcam.ico</ApplicationIcon>
    <WarningLevel>9999</WarningLevel>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Resources\bigcam.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Mtf.Controls" Version="1.0.27" />
    <PackageReference Include="Mtf.Database" Version="2.0.25" />
    <PackageReference Include="Mtf.MessageBoxes" Version="3.0.31" />
    <PackageReference Include="Mtf.Network" Version="1.0.15" />
    <PackageReference Include="Mtf.Permissions" Version="3.0.15" />
    <PackageReference Include="Mtf.Windows.Forms.LanguageService" Version="3.0.33" />
    <PackageReference Include="System.Configuration.ConfigurationManager" Version="9.0.1" />
    <PackageReference Include="System.Private.Uri" Version="4.3.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Database\Database.csproj" />
    <ProjectReference Include="..\LiveView.Core\LiveView.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Forms\VideoSourceCameraWindow.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Forms\VideoSourceCameraWindow.resx">
      <SubType>Designer</SubType>
    </EmbeddedResource>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>