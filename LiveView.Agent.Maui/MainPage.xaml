<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:camera="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
            x:Class="LiveView.Agent.Maui.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">

            <!-- Server Address Entry -->
            <Entry x:Name="serverEntry"
                   Text="192.168.0.1:4444"
                   Placeholder="Enter server address"
                   Keyboard="Url" />

            <!-- Camera View -->
            <camera:CameraView x:Name="cameraView"
                               WidthRequest="300"
                               HeightRequest="400" />

            <!-- Start/Stop Button -->
            <Button x:Name="startStopButton"
                    Text="Start"
                    Clicked="StartCamera_Clicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
