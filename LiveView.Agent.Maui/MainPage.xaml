<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:camera="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
            x:Class="LiveView.Agent.Maui.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">

            <Entry x:Name="serverEntry" Text="192.168.0.1:4444" Placeholder="Enter server address" />
            <Entry Text="{Binding BufferSize, Mode=TwoWay}" Keyboard="Numeric" Completed="OnNumberCompleted" Placeholder="Buffer size" />
            <Entry x:Name="preferredIpAddressEntry" Text="192.168.0." Placeholder="Preferred IP address" />

            <Grid ColumnDefinitions="*, Auto">
                <Entry x:Name="cameraNameEntry" Text="Camera" Placeholder="Camera name" Grid.Column="0" />
                <Picker Title="Select Camera" ItemsSource="{Binding AvailableCameras}" ItemDisplayBinding="{Binding Name}" SelectedItem="{Binding SelectedCamera, Mode=TwoWay}" Grid.Column="1" />
            </Grid>

            <camera:CameraView x:Name="cameraView" WidthRequest="300" HeightRequest="400" />
            <Button x:Name="startStopButton" Text="Start" Clicked="StartCamera_Clicked" />
            <Label x:Name="serverLabel" Text="Server: Not started" FontSize="14" TextColor="Black"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
